@model Assignment_2___Jackson_vdw.Models.GradeCalculatorModel

<body>
    <!--Grade Calculator-->
    <div class="center">
        <h3>Enter your grades in the following categories:</h3>
        <form asp-action="GradeCalculator" method="post">

            <label asp-for="assignments">Assignments:</label>
            <input asp-for="assignments" />
            <br />

            <label asp-for="group_projects">Group Projects:</label>
            <input asp-for="group_projects" />
            <br />

            <label asp-for="quizzes">Quizzes:</label>
            <input asp-for="quizzes" />
            <br />

            <label asp-for="exams">Exams:</label>
            <input asp-for="exams" />
            <br />

            <label asp-for="intex">INTEX:</label>
            <input asp-for="intex" />
            <br />
            <br />

            <input type="submit" value="Calculate my grade" id="submitButton">

            <div asp-validation-summary="All"></div>
        </form>
    </div>

    @*Output for grade calculator. Not currenlty being used because submit button refreshes page. But might be implemented in a later build.*@
    <div class="center">
        <p id="grade_output" asp-for="grade_output"></p>
    </div>
</body>
