@{ ViewBag.headerText = "Welcome to my very own website";
    ViewBag.Title = "Jackson van der Werf";
    ViewBag.Home = "Home";
    ViewBag.GradeCalc = "Grade Calculator";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/css/main.css" rel="stylesheet" />
    <link rel="icon" href="~/img/Custom-Icon-Design-Mono-Business-2-Coffee.ico">
</head>
<body>
    @*Header including navigation links*@
    <header>
        <p>@ViewBag.headerText</p>
        <menu>
            <ul>
                <li><a asp-controller="Home" asp-action="Index">@ViewBag.Home</a></li>
                <li><a asp-controller="Home" asp-action="GradeCalculator">@ViewBag.GradeCalc</a></li>
            </ul>
        </menu>
    </header>

    @RenderBody()

    <!--Footer including script sources-->
    <footer>
        <script src="~/node_modules/jquery/dist/jquery.min.js"></script>
        <script src="~/js/javascript.js"></script>
    </footer>
</body>
</html>
